<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_black_trans90"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_home_add_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:padding="20dp"
        android:src="@mipmap/add_to_cancle" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/iv_home_add_cancel"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_add_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/add_clock"
            android:drawablePadding="25dp"
            android:text="闹钟"
            android:textColor="@color/white_EC"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_add_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_25"
            android:drawableLeft="@mipmap/add_timer"
            android:drawablePadding="25dp"
            android:text="计时器"
            android:textColor="@color/white_EC"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_add_timer_sleep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_25"
            android:drawableLeft="@mipmap/add_timer_sleep"
            android:drawablePadding="25dp"
            android:text="睡眠计时器"
            android:textColor="@color/white_EC"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_add_cutdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_25"
            android:drawableLeft="@mipmap/add_cutdown"
            android:drawablePadding="25dp"
            android:text="倒计时"
            android:textColor="@color/white_EC"
            android:textSize="20sp" />
    </LinearLayout>
</RelativeLayout>